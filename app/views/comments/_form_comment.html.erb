<h3 class="text-white mt-5">Leave a Comment</h3>

<div class="comment-form mt-4">
  <%= form_with model: [ book, Comment.new ], url: book_comments_path(book), local: true do |form| %>
    <div class="form-group">
      <%= form.label :caption, "Your Comment", class: "text-white" %>
      <%= form.text_area :caption, rows: 5, class: "form-control", placeholder: "Write your comment here..." %>
    </div>

    <div class="form-group">
      <%= form.submit "Post Comment", class: "btn btn-outline-light btn-block" %>
    </div>
  <% end %>
</div>
