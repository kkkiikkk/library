<h3>Leave a Comment</h3>

<%= form_with model: [ book, Comment.new ], url: book_comments_path(book), local: true do |form| %>
  <div class="form-group">
    <%= form.label :caption, "Your Comment" %>
    <%= form.text_area :caption, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Post Comment", class: "btn btn-primary" %>
  </div>
<% end %>
