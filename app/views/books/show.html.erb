<h1><%= @book.name %></h1>

<p>
  <strong>Average Rating:</strong>
  <%= @average_rating %>
</p>

<p>
  <strong>Count Likes:</strong>
  <%= @like_count %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<%= render 'comments/list_comments', book: @book %>
<%= render 'comments/form_comment', book: @book %>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Status:</strong>
  <%= @book.status %>
</p>

<%= render 'requests/form', book: @book, request: @book.requests.build %>

<%= render 'history/table_history', book: @book %>

<%= link_to 'Back to Books', books_path %>

<%= form_with url: book_likes_path(@book), method: :post, local: true do |form| %>
  <%= form.hidden_field :book_id, value: @book.id %>

  <div>
    <%= form.label :rate, "Rate this book (1 to 5):" %>
    <%= form.number_field :rate, in: 1..5, step: 1, value: 5 %>
  </div>

  <%= form.submit "Like this book" %>
<% end %>