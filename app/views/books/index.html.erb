<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Author</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
